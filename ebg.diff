+// Battleground Core Script
+-	script	BG_Core	-1,{
+	end;
+
+OnInit:
+	//Battleground Index
+	$@BG_Index = -1;
+	//Battleground Status
+	$@BG_Status = 0;
+	//Battleground Arena Names
